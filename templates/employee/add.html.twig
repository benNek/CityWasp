{% extends 'base.html.twig' %}

{% block title %}Naujas darbuotojas{% endblock %}

{% block body %}
    <div class="container mt-5">
      <h3 style="text-align: center">Pridėti darbuotoją</h3>
      <form class="mt-3">
        <div class="form-row">
          <div class="form-group col-4">
            <input type="text" class="form-control" id="vardas" placeholder="Vardas">
          </div>
          <div class="form-group col-4">
            <input type="text" class="form-control" id="pavarde" placeholder="Pavardė">
          </div>
          <div class="form-group col-4">
            <input type="text" class="form-control" id="tel_nr" placeholder="Tel. nr.">
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-6">
            <input type="text" class="form-control" id="epastas" placeholder="El. paštas">
          </div>
          <div class="form-group col-6">
            <input type="text" class="form-control" id="adresas" placeholder="Adresas">
          </div>
        </div>
        <button class="btn btn-block btn-primary" type="submit">Pridėti</button>
      </form>
    </div>
{% endblock %}