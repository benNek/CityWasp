{% extends 'base.html.twig' %}

{% block title %}Darbuotojo darbo valandu įvedimas{% endblock %}
{% block body %}
<div class="container mt-5">
      <h3 style="text-align: center">Įvesti darbo valandas</h3>
      <form class="mt-3" method = "POST" action = "{{path('valanduatnaujinimas', {id: user.idDarbuotojas})}}">
        <div class="form-row">
          <div class="form-group col-4">
            <input type="time" class="form-control" name="pradzia" placeholder="Darbo pradžia">
          </div>
          <div class="form-group col-4">
            <input type="time" class="form-control" name="pabaiga" placeholder="Darbo pabaiga">
          </div>
        </div>
        <input type="submit" class="btn btn-primary" value ="Įvesti"</input>
    </form>
</div>
{% endblock %}