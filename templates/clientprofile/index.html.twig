{% extends 'base.html.twig' %}

{% block title %}Jūsų profilis{% endblock %}

{% block body %}


{% for message in app.flashes('kprisijunges') %}
	<div class="container mt-5" align="center">
		<div class="alert alert-success" style="width:19%">
			{{ message }}
			{{ app.user.vardas }}
		</div>
	</div>
	{% endfor %} 

<div class="container mt-5" style="width:80%" align="center">


<form action = "{{ path('ChangeUserData') }}">
<label>El. paštas</label><br>
<input type="email" name="el_pastas" value={{ app.user.username }}><br>
<label>Vardas</label><br>
<input type="text" name="vardas" value={{ app.user.getVardas }}><br>
<label>Pavarde</label><br>
<input type="text" name="pavarde" value={{ app.user.pavarde }}><br>
<label>Tel. nr.</label><br>
<input type="text" name="telnr" value={{ app.user.telnr }}><br>
<label>Adresas</label><br>
<input type="input" name="adresas" value="{{ app.user.adresas }}"><br>
<label>Gimimo data</label><br>
<input type="date" max="2000-12-31" name="data" value={{ app.user.gimimodata|date('Y-m-d')}} style="width:16%"><br>
<label>Slaptažodis patvirtinimui</label><br>
<input type="password" name="slaptazodis" placeholder="Slaptažodis patvirtinimui" required><br>
<br><button type="submit" class="btn btn-lg btn-primary btn-block" style="width:19%">Atnaujinti</button><br>
</form>

{% for message in app.flashes('slaptazodis') %}
	<div class="container mt-5" align="center">
		<div class="alert alert-success" style="width:19%">
			{{ message }}
		</div>
	</div>
	{% endfor %} 

<form action = "{{ path('ChangeUsersPassword') }}">
    <input type="password" name="Senasslaptazodis" placeholder="Senas slaptažodis" required><br>
	<input type="password" name="slaptazodis" placeholder="Naujas slaptažodis" required><br>
	<br><button type="submit" class="btn btn-lg btn-primary btn-block" style="width:19%">Atnaujinti</button><br>
	</form>

{% for message in app.flashes('naujienlaiskiai') %}
	<div class="container mt-5" align="center">
		<div class="alert alert-success" style="width:19%">
			{{ message }}
		</div>
	</div>
	{% endfor %} 

<form action = "{{ path('ChangeNewsletter') }}">
	<button type="submit" class="btn btn-lg btn-primary btn-block" style="width:19%">Keisti naujienlaiškius</button><br>
</form>
</div>
<div class="container mt-5" align=center style="width:50%">
<form action = "{{ path('logout')}}">
<button class="btn btn-danger" type="submit" style="width:20%">Atsijungti</button>
</form>
<p>
<form action = "{{ path('delete_user')}}">
<label>Slaptažodis patvirtinimui</label><br>
<input type="password" name="slaptazodis" placeholder="Slaptažodis patvirtinimui" required><br>
<button class="btn btn-danger" type="submit" style="width:20%">Ištrinti paskyrą</button>
</form>
</div>
{% endblock %}