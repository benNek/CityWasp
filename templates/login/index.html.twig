{% extends 'base.html.twig' %}

{% block title %}Prisijungti{% endblock %}

{% block body %}
	<style>
	.error{color:red;}
	</style>


{% if error %}
    {{  dump(error) }}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

{% if error %}
	<span class="error">{{ error.messageKey }} </span>
{% endif %}

<div class="container" style="width:20%">
<form action="{{ path('login') }}" method="POST">
<h1 class="h3" align=center>Prisijunkite</h1>

<input type="text" name="_username" value="{{ last_username }}" placeholder="el. pašto adresas" class="form-control">
<input type="password" name="_password" placeholder="slaptažodis" class="form-control">

<button type="submit" class="btn btn-lg btn-primary btn-block">Prisijungti</button>
</form>
</div>
<p><a href="/kprofilis" class="button">Klientui</a>
<a href="/darbuotojas/profilis" class="button">Darbuotojui</a>

{% endblock %}